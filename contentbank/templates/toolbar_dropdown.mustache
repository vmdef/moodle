{{!
    @template core_contentbank/addmenu-selector

    Example context (json):
    {
        {
            "name": "H5P Interactive Content",
            "baseurl": http://example.com/contenbank/edit/contextid=1&plugin=h5p,
            "items": [
                {
                    "itemname": "Accordion",
                    "itemlinkparams": "library=H5P.Accordion 1.1"
                    "itemicon": "icon.png"
                }
            ]
        }
    }
}}
<div class="btn-group mr-1" role="group">
    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown"
            aria-haspopup="true" aria-expanded="false" aria-label="{{#str}} aria:adddropdown, core_contentbank {{/str}}">
        {{#str}} add {{/str}}
    </button>
    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="btnGroupDrop1">
        {{#contenttypes}}
            <h6 class="dropdown-header">{{ name }}</h6>
            {{#items}}
                <a class="dropdown-item" href="{{{ baseurl }}}&{{{ itemlinkparams }}}">
                    <img alt="" class="icon" src="{{{ itemicon }}}"> {{ itemname }}
                </a>
            {{/items}}
        {{/contenttypes}}
    </div>
</div>