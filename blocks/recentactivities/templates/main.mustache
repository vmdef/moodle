{{!
    @template block_recentactivities/main

    This template renders the main content area for the recentactivities block.

    Example context (json):
    {}
}}

<div id="block-recentactivities-{{uniqid}}" class="block-recent-activities" data-region="recent-activities" data-userid="{{userid}}">
<div class="container-fluid p-0">
        <div id="activities-view-{{uniqid}}" class="block_recentactivities"
             data-region="recentactivities-container" data-no-activities-url="{{urls.noactivitiesimg}}">
            {{> block_recentactivities/recent-activities-view }}
        </div>
    </div>
</div>
{{#js}}
require(
[
    'jquery',
    'block_recentactivities/main',
],
function(
    $,
    Main
) {
    var root = $('#block-recentactivities-{{uniqid}}');
    var userid = root.attr('data-userid');

    Main.init(userid, root);
});
{{/js}}