{{!
    @template block_recentactivities/recent-activities-view

    This template renders the activities view for the recentactivities block.

    Example context (json):
    {
        "noactivitiesimg": "https://moodlesite/theme/image.php/boost/block_recentactivities/1535727318/activities"
    }
}}
<div id="recent-activities-view-{{uniqid}}"
     data-region="recent-activities-view"
     data-noactivitiesimg="{{noactivitiesimg}}">
    <div data-region="recent-activities-view-content">
        <div data-region="recent-activities-loading-placeholder">
            <div class="row card-deck">
                {{> block_recentactivities/placeholder-activity }}
                {{> block_recentactivities/placeholder-activity }}
                {{> block_recentactivities/placeholder-activity }}
            </div>
        </div>
    </div>
</div>

