{{!
    Frontpage new items.
}}
<div class="news">
    <div class="container-fluid px-4 pt-4">
        <div class="row">
            {{#feed}}
                <div class="card m-0 px-2 pb-3 border-0 focusblock">
                    <div class="card-body">
                        <div class="media heading">
                            <div class="media-body">
                                <div class="d-flex border-bottom-dotted align-items-center">
                                    <h3>
                                        {{{rsstitle}}}
                                    </h3>
                                    <a href="{{{rssurl}}}" class="text-moodle-gray ml-auto">
                                        {{#pix}}i/rss, core{{/pix}}
                                    </a>
                                </div>
                                {{#showdebug}}
                                    <div style="background-color:#ffd3d9; padding:10px; margin-bottom: 10px;">
                                        <em>source:</em>&nbsp;{{{source}}}
                                        <em>generated:</em>&nbsp;{{#userdate}} {{timegenerated}} , {{#str}} strftimedatetimeshort, core_langconfig  {{/str}} {{/userdate}}
                                    </div>
                                {{/showdebug}}
                            </div>
                        </div>

                        <ul class="media-list list-unstyled">
                            {{#newsitems}}
                            <li class="media mt-3">
                                <div class="media-body">
                                    <div class="media-heading mb-1">
                                        <a href="{{{url}}}">
                                            {{{title}}}
                                        </a>
                                    </div>
                                    <div class="muted">
                                                <span class="muted text-muted small">
                                                    {{{date}}}
                                                </span>
                                    </div>
                                </div>
                            {{/newsitems}}
                        </ul>
                        <hr>

                        <div class="d-flex justify-content-end">
                            <div class="morelink">
                                <a class="btn btn-link btn-sm icon-nomargin" href="{{{moreurl}}}">
                                    {{moreanchortext}}
                                    {{#pix}}a/double-right, theme{{/pix}}
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {{/feed}}
        </div>
    </div>
</div>
