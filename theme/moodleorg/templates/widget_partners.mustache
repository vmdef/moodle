{{!
    Moodle partners.
}}
<div class="partners">
    <div class="container-fluid">
        <div class="moodlepartnerbar">
            <div class="row align-items-center">
                <div class="col-md-5">
                    <div class="logo d-flex">
                        <a href="https://moodle.com/partners/" class="ml-auto">
                            <img src="{{{ image }}}" class="img-fluid" width="288px" height="74px">
                        </a>
                    </div>
                </div>
                <div class="col-md-7 pt-3">
                    <div class="slogan">
                        {{#str}} partnerslogan , local_moodleorg {{/str}}
                    </div>
                </div>
            </div>
        </div>
        <div class="thumbnails">
            <div class="row">
                {{#ads}}
                    <div class="col-4 col-sm-2 px-0 px-sm-2">
                        <a href="{{{ link }}}">
                            <img alt="{{{ title }}}" class="grey" src="{{{ imgsrc }}}">
                        </a>
                    </div>
                {{/ads}}
            </div>
        </div>
    </div>
</div>