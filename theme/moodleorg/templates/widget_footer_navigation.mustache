{{!
    Page footer navigation.
}}
<div class="footer-nav">
    <div class="container-fluid">
        <div class="row px-3">
            {{#menugroups}}
             <div class="col-md-2">
                {{#menus}}
                    <ul class="list-unstyled footer-nav-list">
                        <li class="primary">
                            <a href="{{{ primaryurl }}}">{{{ primarytext }}}</a>
                        </li>
                        {{#items}}
                            <li class="secondary">
                                <a href="{{{ url }}}">{{{ text }}}</a>
                            </li>
                        {{/items}}
                    </ul>
                {{/menus}}
            </div>
            {{/menugroups}}
            <div class="col-md-2">
                <div class="social">
                    <img id="moodlelogo" src="{{{ logo }}}" alt="Moodle">
                    <div id="sharethis">
                        <ul>
                            <li><a id="share-twitter" href="https://twitter.com/@moodle"><span>Twitter</span></a></li>
                            <li><a id="share-facebook" href="https://facebook.com/moodle"><span>Facebook</span></a></li>
                            <li><a id="share-linkedin" href="https://www.linkedin.com/company/moodle"><span>Linked In</span></a></li>
                            <li><a id="share-youtube" href="https://www.youtube.com/moodlehq"><span>Youtube</span></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
