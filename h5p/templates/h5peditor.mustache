{{!
    @template core_h5p/h5peditor

    Displays the H5P Editor form.

    Context variables required for this template:
    * id: int - the id of the content to edit.
    * h5plibrary: string - the library name of the content to create.
    * h5pparams: string - json encodend content params
    * actionurl: string - the action URL

    Example context (json):
    {
        "id": 3,
        "h5library": "H5P.Blanks 1.0",
        "h5pparams": "{}",
        "actionurl": "https://domain.example/h5p/editor.php",
    }
}}
<div class="core_h5p-editor-wrapper">
    <form id="h5peditor-form" method="post" action="{{actionurl}}">
        <input type="hidden" name="contentid" value="{{id}}">
        <input type="hidden" name="sesskey" value="{{sesskey}}">
        <input type="hidden" name="name">
        <input type="hidden" name="h5paction">
        <input type="hidden" name="h5plibrary" value="{{h5plibrary}}">
        <input type="hidden" name="h5pparams" value="{{h5pparams}}">
        <div class="float-right mb-3">
            <input type="submit" class="btn btn-primary" name="save" value="{{#str}} save, core {{/str}}">
            <input type="submit" class="btn btn-secondary" name="cancel" value="{{#str}} cancel, core {{/str}}">
        </div>
        <div class="h5p-editor-wrapper">
            <div class="h5p-editor">
                {{#str}} javascriptloading, core_h5p {{/str}}
            </div>
        </div>
        <div class="h5p-editor-upload"></div>
        <div class="float-right mt-3">
            <input type="submit" class="btn btn-primary" name="save" value="{{#str}} save, core {{/str}}">
            <input type="submit" class="btn btn-secondary" name="cancel" value="{{#str}} cancel, core {{/str}}">
        </div>
    </form>
</div>
{{#js}}
    require(['jquery'], function($) {
        var $editor = $('.h5p-editor');

        const mformId = H5PIntegration.editor.formId;

        // Cancel validation and submission of form if clicking cancel button
        const cancelSubmitCallback = function ($button) {
            return $button.is('[name="cancel"]');
        };

        $('input[name="h5paction"]').val("create");

        H5PEditor.init(
            $('#' + mformId),
            $('input[name="h5paction"]'),
            $('.h5p-editor-upload'),
            $('.h5p-editor-wrapper'),
            $editor,
            $('input[name="h5plibrary"]'),
            $('input[name="h5pparams"]'),
            '',
            $('input[name="name"]'),
            cancelSubmitCallback
        );
    });
{{/js}}